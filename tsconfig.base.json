{
	"compileOnSave": false,
	"compilerOptions": {
		"rootDir": ".",
		"sourceMap": true,
		"declaration": false,
		"moduleResolution": "node",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"importHelpers": true,
		"target": "es2020",
		"module": "esnext",
		"lib": ["es2020", "dom"],
		"skipLibCheck": true,
		"skipDefaultLibCheck": true,
		"baseUrl": ".",
		"paths": {
			"@foundryvtt-dndmashup/components": ["packages/components/src/index.ts"],
			"@foundryvtt-dndmashup/core": ["./packages/core/src/index.ts"],
			"@foundryvtt-dndmashup/foundry-compat": ["packages/foundry-compat/src/index.ts"],
			"@foundryvtt-dndmashup/mashup-react": ["./packages/mashup-react/src/index.ts"],
			"@foundryvtt-dndmashup/mashup-rules": ["packages/mashup-rules/src/index.ts"]
		}
	},
	"exclude": ["node_modules", "tmp"]
}
