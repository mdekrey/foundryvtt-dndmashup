{
	"compilerOptions": {
		"target": "ES2020",
		"lib": ["DOM", "ES2020"],
		"types": ["@league-of-foundry-developers/foundry-vtt-types"],
		"esModuleInterop": true,
		"moduleResolution": "node",
		"forceConsistentCasingInFileNames": true,
		"allowSyntheticDefaultImports": true,
		"allowJs": true,
		"strict": true,
		"baseUrl": "./",
		"jsx": "react-jsx",
		"noEmit": true,
		"outDir": "out/",
		"paths": {
			"dndmashup-react/src/*": ["../react/src/*"]
		}
	},
	"include": ["src"],
	"references": [
		{
			"path": "../react"
		}
	]
}
